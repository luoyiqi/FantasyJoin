<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:radius">@dimen/button_radius</item>
        <item name="android:background">@color/google_plus_color</item>
    </style>

</resources>
